@{
    ViewData["Title"] = "Inicio";
}

<div class="text-center mt-5">
    <h1 class="display-4 mb-4">Bienvenido a Celulares Market</h1>
    <p class="lead mb-5">Compra y vende celulares de manera rápida y sencilla.</p>

    <div class="row justify-content-center">
        <div class="col-md-4">
            <div class="card shadow-lg border-0 mb-4">
                <div class="card-body">
                    <h3 class="card-title">Venta de  Celulares</h3>
                    <p class="card-text">Explora la lista de celulares disponibles en venta.</p>
                    <a asp-controller="Celulares" asp-action="Index" class="btn btn-primary btn-lg w-100">
                        Ver Celulares
                    </a>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card shadow-lg border-0 mb-4">
                <div class="card-body">
                    <h3 class="card-title">Compra de  Celulares</h3>
                    <p class="card-text">Vende tu celular al mejor precio.</p>
                    <a asp-controller="Celulares" asp-action="Catalogo" class="btn btn-success btn-lg w-100">
                        Vender Celular
                    </a>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card shadow-lg border-0 mb-4">
                <div class="card-body">
                    <h3 class="card-title">Balance</h3>
                    <p class="card-text">Consulta el balance de tus compras y ventas.</p>
                    <a asp-controller="Celulares" asp-action="Balance" class="btn btn-info btn-lg w-100">
                        Ver Balance
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
